<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>SBQQ__AverageCustomerDiscount__c</field>
        <field>SBQQ__ContractingMethod__c</field>
        <field>CreatedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Send_email_for_request_approved_to_quote_owner</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>SBQQ__Quote__c.SBQQ__AverageCustomerDiscount__c</field>
                <operation>greaterOrEqual</operation>
                <value>15</value>
            </criteriaItems>
            <criteriaItems>
                <field>SBQQ__Quote__c.SBQQ__AverageCustomerDiscount__c</field>
                <operation>lessThan</operation>
                <value>30</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Discount greater than 15% and less than 30%</label>
        <name>Discount_greater_than_15_and_less_than_30</name>
        <rejectionActions>
            <action>
                <name>Send_email_for_request_rejected_to_quote_owner</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Send_email_for_request_approved_to_quote_owner</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>cro@tradeshift.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(  SBQQ__AverageCustomerDiscount__c &gt;= 30, 
      SBQQ__AverageCustomerDiscount__c &lt; 40, 
ISPICKVAL(CreatedBy.Region__c , &#39;EMEA&#39;) 
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Discount greater than 30% and less than 40% with region EMEA</label>
        <name>Discount_greater_than_30_and_less_than_40_with_region_EMEA</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Send_email_for_request_rejected_to_quote_owner</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Send_email_for_request_approved_to_quote_owner</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>matt.mccusker@tradeshift.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(  SBQQ__AverageCustomerDiscount__c &lt; 30, 
SBQQ__AverageCustomerDiscount__c &lt;= 40, 
ISPICKVAL(CreatedBy.Region__c, &#39; NA/AUS&#39;) )</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Discount greater than 30% and less than 40% with region NA/ US</label>
        <name>Discount_greater_than_30_and_less_than_40_with_region_NA_US</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Send_email_for_request_rejected_to_quote_owner</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Send_email_for_request_approved_to_quote_owner</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>alexander.frick@tradeshift.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rst@tradeshift.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>SBQQ__Quote__c.SBQQ__AverageCustomerDiscount__c</field>
                <operation>greaterOrEqual</operation>
                <value>40</value>
            </criteriaItems>
        </entryCriteria>
        <label>Discount is greater than 40%</label>
        <name>Discount_is_greater_than_40</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Send_email_for_request_rejected_to_quote_owner</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>If discount value is greater than 15%</description>
    <emailTemplate>unfiled$public/Discount_Approval_request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SBQQ__Quote__c.SBQQ__AverageCustomerDiscount__c</field>
            <operation>greaterOrEqual</operation>
            <value>15</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>For Avg Customer Discount</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
