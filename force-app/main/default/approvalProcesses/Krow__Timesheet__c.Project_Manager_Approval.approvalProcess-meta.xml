<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>john.lally@tradeshift.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Krow__Project__c</field>
        <field>Krow__Project_Owner__c</field>
        <field>Name</field>
        <field>Krow__Project_Resource__c</field>
        <field>Owner</field>
        <field>Krow__Approval_Status__c</field>
        <field>Krow__Task_Timesheet_Hours__c</field>
        <field>Krow__Total_Billable_Hours_New__c</field>
        <field>Krow__Total_Non_Billable_Hours__c</field>
        <field>Krow__Week_Start_Date__c</field>
        <field>Krow__Week_End_Date__c</field>
        <field>Krow__Total_Bill_Amount__c</field>
        <field>Krow__Total_Cost_Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Krow__Project_Owner__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Krow__Project_Owner__r.Id &lt;&gt; Krow__Project_Resource__r.Krow__User__r.Id</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Project Manager Approval</label>
        <name>Project_Manager_Approval</name>
    </approvalStep>
    <emailTemplate>Krow__Krow_PSA/Krow__Timesheet_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Krow__Timesheet__c.CreatedBy</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Approved2</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejected2</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected2</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Project Manager Approval</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
